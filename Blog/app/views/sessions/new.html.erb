<div class="row">
  <div class="col-md-3 col-sm-0"></div>
  <div class="col-md-6 col-sm-12">
    <h1>Sign In</h1>
    <%= form_for :session, url: session_path do |f| %>

    <div class='form-group'>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class='form-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    
    <%= f.submit "Sign In", class:'btn-outline-dark' %>
    <% end %>
  </div>
</div>
