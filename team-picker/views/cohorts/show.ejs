<%- include('../partials/header') %>
<div class="col-sm-8">
<div class="card">

  <div class="card-header">
    <strong><%= curr_cohort.returnName() %></strong>
  </div>

  <div class="card-body">
    <p class="card-text">
      <%= curr_cohort.returnMembers() %>
    </p>

  </div>
  <div class='card-body'>
    <form action='/cohorts/<%= curr_cohort.id %>'>
      <div class="form-check">
  <label class="form-check-label">
    <input class="form-check-input" type="radio" name="selection" value="team_count" checked>
    Team Count
  </label>
</div>
<div class="form-check">
  <label class="form-check-label">
    <input class="form-check-input" type="radio" name="selection" value="number_per_team">
    Number Per Team
  </label>
</div>
<div class="form-group">
    <label for="count">Count</label>
    <input type="text" class="form-control" name="count" placeholder="2">
  </div>
  <button class="btn btn-primary" type="submit">Submit form</button>
</form>

    
  </div>

<% if(curr_cohort.hasTeams()){ %> 
  <ul class='list-group'>
    <% let teams = curr_cohort.returnTeams() %>
    <% for(let index in teams){%>
     
      
        <li class="list-group-item"><strong><%= index %> ) </strong><%= teams[index] %></li>
      
      <%}%>
      
      <% }%>
    </ol> 
  </div>
    <%- include('../partials/footer') %>
